<?xml version="1.0" encoding="utf-8"?>
<selector
  android:color="@color/background"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dm20"/>
      <stroke
        android:color="@color/textColorLow"
        android:width="@dimen/dm2"/>
      <solid android:color="@color/background" />
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dm20"/>
      <stroke
        android:color="@color/controls"
        android:width="@dimen/dm2"/>
      <gradient android:type="linear" android:angle="90" android:startColor="@color/backgroundAccent" android:endColor="@color/mainColor" />
    </shape>
  </item>

  <item android:state_enabled="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dm20"/>
      <stroke
        android:color="@color/controls"
        android:width="@dimen/dm2"/>
      <gradient android:type="linear" android:angle="0" android:startColor="@color/backgroundAccent" android:endColor="@color/mainColor" />
    </shape>
  </item>

</selector>