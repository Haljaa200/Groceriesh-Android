<?xml version="1.0" encoding="utf-8"?>
<ripple
  android:color="?android:colorControlHighlight"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_enabled="false">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dm4"/>
      <stroke android:color="@color/textColorLow" />
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dm4"/>
      <stroke android:width="@dimen/dm1" android:color="@color/mainColor" />
    </shape>
  </item>

  <item android:state_enabled="true">
    <shape android:shape="rectangle">
      <corners android:radius="@dimen/dm4"/>
      <stroke android:width="@dimen/dm1" android:color="@color/cardBackgroundText" />
    </shape>
  </item>

</ripple>