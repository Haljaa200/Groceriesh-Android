<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <shape android:shape="rectangle">

      <stroke android:width="1dp" android:color="@color/controls" />
      <corners android:radius="@dimen/dm250"/>
      <solid android:color="@color/background" />
    </shape>
  </item>

  <item android:state_focused="true">
    <shape android:shape="rectangle">

      <stroke android:width="1.5dp" android:color="@color/controls" />
      <corners android:radius="@dimen/dm250"/>
      <solid android:color="@color/background" />
    </shape>
  </item>

  <item android:state_selected="true">
    <shape android:shape="rectangle">

      <stroke android:width="1dp" android:color="@color/controls" />
      <corners android:radius="@dimen/dm250"/>
      <solid android:color="@color/background" />
    </shape>
  </item>

  <item android:state_enabled="false">
    <shape android:shape="rectangle">

      <stroke android:width="1dp" android:color="@color/textColorLow" />
      <corners android:radius="@dimen/dm250"/>
      <solid android:color="@color/background" />
    </shape>
  </item>

  <item android:state_enabled="true">
    <shape android:shape="rectangle">

      <stroke android:width="1dp" android:color="@color/textColor" />
      <corners android:radius="@dimen/dm250"/>
      <solid android:color="@color/backgroundAccentSecondary" />
    </shape>
  </item>
</selector>